<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tibro.brickcatalog.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_weight="1" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_menu_height_land"
                android:id="@+id/butArchitecture"
                android:background="@drawable/button_architecture"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="4dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_menu_height_land"
                android:id="@+id/butCity"
                android:background="@drawable/button_city"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_menu_height_land"
                android:id="@+id/butCreator"
                android:background="@drawable/button_creator"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_menu_height_land"
                android:id="@+id/butFriends"
                android:background="@drawable/button_friends"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_menu_height_land"
                android:id="@+id/butStarWars"
                android:background="@drawable/button_starwars"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_menu_height_land"
                android:id="@+id/butTechnic"
                android:background="@drawable/button_technic"
                android:layout_marginBottom="10dp" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>
